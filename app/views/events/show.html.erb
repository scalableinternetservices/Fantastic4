<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @event.tags %>
</p>
<div>
  <%= link_to("Post to this event", controller: "posts", action: "new", post: {event_id: @event.id} ) %>
</div>

<table>
	<% @event.posts.each do |post|%>
		<tr>
			<td><%= post.text_content%></td>
			<td><%= post.vote_count%></td>
			<td><%= link_to "see detail", post%></td>
			<td><%= button_to "vote", post, action: "vote", params: {from: 1}%></td>
		</tr>
	<% end %>
</table>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
