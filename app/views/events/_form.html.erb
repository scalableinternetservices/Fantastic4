    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :tags %><br>
	<% if params[:tag] %>
		<%= f.select :tags, Event::TAG_TYPES, :selected => params[:tag] %>
	<% else %>
    	<%= f.select :tags, Event::TAG_TYPES %>
	<% end %>
  </div>
