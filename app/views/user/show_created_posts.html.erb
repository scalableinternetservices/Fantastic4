<p id="notice"><%= notice %></p>

<h1 class="sub-header">Posts created by me</h1>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <th>Title</th>
			<th>Event</th>
			<th>Total vosts</th>
			<th>Create Time</th>
        </thead>
        <tbody>
            <% @created_posts.each do |post| %>
            <tr>
                <td><%= link_to "#{post.text_content}", post%></td>
				<td><%= link_to "#{post.event.title}", post.event%></td>
				<td><%= post.vote_count%></td>
				<td><%= post.created_at%></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>

<div class="container-fluid">
	<div class="row">
		<div class="sidebar">
			<ul class="nav nav-sidebar">
            	<li class="active"><a href="/">My profile</a></li>
            	<li><a href="/profile/events">Event</a></li>
            	<li><a href="/profile/posts">Post</a></li>
				<li><a href="/profile/votes">Vote</a></li>
            	<li><a href="/users/edit">Edit</a></li>
          	</ul>
		</div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
			<%= yield %>
		</div>		
	</div>
</div>


