<p id="notice"><%= notice %></p>

<h1 class="sub-header">My Voting History</h1>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
			<th>Events</th>
			<th>Vote time</th>
        </thead>
        <tbody>
			<% @voted_posts.group_by(&:event_id).each do |event, posts| %>
					<tr>
						<td><%= event %></td>
						<%= render :partial => 'post', :collection => posts %>
					</tr>
			    	
			<% end %>
        </tbody>
    </table>
</div>

<div class="container-fluid">
	<div class="row">
		<div class="sidebar">
			<ul class="nav nav-sidebar">
            	<li class="active">
            	<li><a href="/profile/events">Event</a></li>
            	<li><a href="/profile/posts">Post</a></li>
				<li><a href="/profile/votes">Vote</a></li>
            	<li><a href="/users/edit">Profile</a></li>
          	</ul>
		</div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
			<%= yield %>
		</div>		
	</div>
</div>
