  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="glocal_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="100" type="ts_http">
	  <!-- in order to view "form-data" in browser, prevent mandatory file attachment -->

      <!-- start out at the dashboard. -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user is looking at events -->
      <thinktime value="2" random="true"></thinktime>
	  
      <!-- visit one event, as a user would do.  -->
      <request>
        <http url='/events/1' version='1.1' method='GET'></http>
      </request>
	  
      <!-- wait for up to 2 seconds, user is looking at posts -->
      <thinktime value="2" random="true"></thinktime>	  
	  
	  <!-- visit the post, as a user would do -->
      <request>
         <http url='/posts/5' version='1.1' method='GET'></http>
      </request>
	   	  
	  <!-- authenticity_token differ because we uncomment the csfy exception in application-controller -->
      <!-- <request>
		<dyn_variable name="authenticity_token"/>
        <http url='/users/sign_up' version='1.1' method='GET'></http>
      </request> -->
	  
	  <thinktime value="2" random="true"></thinktime>
	  
	  <!-- user sign up, when they notice they can't vote as a guest -->
	  <setdynvars sourcetype="random_string" length="3">
		  <var name="random_user_email"/>
	  </setdynvars>
	 <request subst="true">
	 <http
	    url='/users'
	    version='1.1'
	    method='POST' 	       contents='utf8=%E2%9C%93&amp;authenticity_token=YiCOqjy%2FSzTcVrgWXNbMHS4N7%2B3WEcl2RJ%2FEDv5EHFy1XdUO4JBO%2FTmAfBHOisDOv%2B2g7tB%2Be7jybqOu8FQ5MQ%3D%3D&amp;user%5Bemail%5D=user%%_random_user_email%%%40gmail.com&amp;user%5Bpassword%5D=12345678&amp;user%5Bpassword_confirmation%5D=12345678&amp;commit=Sign+up'/>
	 </request>
	 
     <!-- wait for up to 2 seconds after log in, user is thinking what he want to do -->
     <thinktime value="2" random="true"></thinktime>
	 
	 <request>
		 <http url='/events/new' version='1.1' method='GET'></http>
	 </request>
	 
	 <!-- wait for up to 2 seconds, user is filling some form -->
	 
	 <!-- user want to create a new event, with tag school -->
	 <setdynvars sourcetype="eval" code='fun({Pid,DynVars})-> [[13, 10]] end.'>
		 <var name="nl" />
	 </setdynvars>

	 <setdynvars sourcetype="eval"
		 code='fun({Pid,DynVars})->
		 {ok, Bin} = file:read_file("default.jpg"),
		 Bin
		 end.'>
		 <var name="attached_file"/>
	 </setdynvars>

	 <setdynvars sourcetype="random_string" length="10">
		 <var name="event_title"/>
	 </setdynvars>

	 <setdynvars sourcetype="random_string" length="20">
		 <var name="event_description"/>
	 </setdynvars>

     <request subst="true">
		 <dyn_variable name="created_event_url" re="[Ll]ocation: (http://.*)\r"/>
		 <dyn_variable name="created_event_id" re="[Ll]ocation: http://.*/events/(.*)\r"/>
         <http url='/events' version='1.1' method='POST' content_type='multipart/form-data; boundary=----FormBoundary' contents='------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[title]"%%_nl%%%%_nl%%%%_event_title%%%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[description]"%%_nl%%%%_nl%%%%_event_description%%%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[tags]"%%_nl%%%%_nl%%School%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[image]"; filename="default.jpg"%%_nl%%Content-Type: image/jpeg%%_nl%%%%_nl%%%%_attached_file%%%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="commit"%%_nl%%%%_nl%%Create Event%%_nl%%------FormBoundary--%%_nl%%%%_nl%%'></http>
     </request>
	 
	 <!-- user want to post to a event -->
	 <request subst="true">
		 <http url='/posts/new?post%5Bevent_id%5D=%%_created_event_id%%' version='1.1' method='GET'></http>
	 </request>
	 
	 <thinktime value="2" random="true"></thinktime>
	 
	 <setdynvars sourcetype="random_string" length="10">
		 <var name="post_content"/>
	 </setdynvars>
	 
     <request subst="true">
		 <dyn_variable name="created_post_url" re="[Ll]ocation: (http://.*)\r"/>
		 <dyn_variable name="created_post_id" re="[Ll]ocation: http://.*/posts/(.*)\r"/>
        <http url='/posts' version='1.1' method='POST' content_type='multipart/form-data; boundary=----FormBoundary' contents='------FormBoundary%%_nl%%Content-Disposition: form-data; name="post[event_id]"%%_nl%%%%_nl%%%%_created_event_id%%%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="post[text_content]"%%_nl%%%%_nl%%%%_post_content%%%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="post[image]"; filename="default.jpg"%%_nl%%Content-Type: image/jpeg%%_nl%%%%_nl%%%%_attached_file%%%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="commit"%%_nl%%%%_nl%%Create Post%%_nl%%------FormBoundary--%%_nl%%%%_nl%%'></http>
     </request>

	 <!-- vote for a post -->
     <request subst="true">
        <http url='/posts/%%_created_post_id%%?click_page=post_show' version='1.1' method='POST'>
        </http>
     </request>
	 
	 <!-- search an event by keywords -->
	 <setdynvars sourcetype="random_string" length="5">
		 <var name="keywords"/>
	 </setdynvars>
     <request subst="true">
        <http url='/events?utf8=%E2%9C%93&amp;search=%%_keywords%%' version='1.1' method='GET'></http>
     </request>
	 
	 <!-- user is checking search result -->
	 <thinktime value="2" random="true"></thinktime>
	 
	 <!-- search an event by timeline -->
	 <setdynvars sourcetype="random_number" start="1" end="6">
		 <var name="search_time"/>
	 </setdynvars>
     <request subst="true">
        <http url='/timeline/%%_search_time%%' version='1.1' method='GET'></http>
     </request>
	 
  	 <!-- user delete the post it created -->
	 <thinktime value="2" random="true"></thinktime>
	 
	 <request subst="true">
	 	<http url="%%_created_post_url%%" method='DELETE'>
	 	</http>
	 </request>
	 
     <!-- user delete the event it created -->
	 <thinktime value="2" random="true"></thinktime>
	 
	 <request subst="true">
	 	<http url="%%_created_event_url%%" method='DELETE'>
	 	</http>
	 </request>
	 
  	 <!-- user log out -->
	 <request>
	 <http
	    url='/users/sign_out'
	    version='1.1'
	    method='DELETE'/>
	 </request>
	 
