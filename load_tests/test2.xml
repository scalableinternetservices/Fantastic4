  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="glocal_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="100" type="ts_http">
	  <!-- in order to view "form-data" in browser, prevent mandatory file attachment -->

      <!-- start out at the dashboard. -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>

	  <!-- user sign up -->
	  <!-- authenticity_token differ because we uncomment the csfy exception in application-controller -->
      <request>
		<dyn_variable name="authenticity_token"/>
        <http url='/users/sign_up' version='1.1' method='GET'></http>
      </request>
	  
	  <setdynvars sourcetype="random_number" start="1000" end="9999999">
	          <var name="random_email_id"/>
	        </setdynvars>
	 <request subst="true">
	 <http 
	    url="/users" 
	    version="1.1" 
	    method="POST" 
	            contents="user%5Bemail%5D=user%%_random_email_id%%@test.com&amp;user%5Bpassword%5D=88888888&amp; user%5Bpassword_confirmation%5D=88888888&amp;authenticity_token=%%_authenticity_token%%commit=Sign up" />
	 </request>	
	 
     <!-- wait for up to 2 seconds, user is looking at events -->
     <thinktime value="2" random="true"></thinktime>

     <!-- visit the event, as a user would do.  -->
     <request>
       <http url='/events/1' version='1.1' method='GET'></http>
     </request>
	 
     <!-- wait for up to 2 seconds, user is looking at event -->
     <thinktime value="2" random="true"></thinktime>
  
  	<!-- visit the post, as a user would do -->
     <request>
       <http url='/posts/2' version='1.1' method='GET'></http>
     </request>

     <!-- wait for up to 2 seconds, user is looking at post -->
     <thinktime value="2" random="true"></thinktime>


